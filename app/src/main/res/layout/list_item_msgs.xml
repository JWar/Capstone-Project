<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/list_item_msgs_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollHorizontally="false"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        tools:text="datetime"
        android:background="@drawable/thin_black_footer_line"
        android:layout_margin="4dp"/>

    <RelativeLayout
        android:layout_margin="2dp"
        android:id="@+id/list_item_msgs_body_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_msgs_time">

        <TextView
            android:elevation="2dp"
            android:id="@+id/list_item_msgs_body_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_corner_rcd_msg"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:scrollHorizontally="false"
            android:textColor="@android:color/white"
            tools:text="BODY" />

    </RelativeLayout>

</RelativeLayout>